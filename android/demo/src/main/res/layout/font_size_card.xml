<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="fontSizeToken" type="com.dbanksdesign.claritydesigntokensdemo.model.FontSizeToken" />
    </data>

    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/size_padding_small"
        android:layout_marginLeft="@dimen/size_padding_small"
        android:layout_marginRight="@dimen/size_padding_small"
        android:padding="@dimen/size_padding_small"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/color_background_primary"
        app:cardElevation="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/size_padding_small">

            <TextView
                android:id="@+id/card_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@{fontSizeToken.value}"
                android:text="@{fontSizeToken.name}"/>

            <TextView
                android:id="@+id/card_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{fontSizeToken.id}" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>